{
  "name": "ppm3-root",
  "version": "1.0.0",
  "description": "PPM 3.0 - Product Portfolio Management System",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "test": "npm test --workspace=client && npm test --workspace=server",
    "start": "npm start --workspace=server",
    "lint": "npm run lint --workspace=client && npm run lint --workspace=server",
    "format": "npm run format --workspace=client",
    "clean": "rimraf client/dist server/dist logs/*.log",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "rimraf": "^4.1.2"
  },
  "keywords": [
    "ppm3",
    "product-portfolio-management",
    "manufacturing",
    "bom",
    "parts-management"
  ],
  "author": "Lenovo PPM Team",
  "license": "MIT",
  "dependencies": {
    "@ant-design/plots": "^2.6.6",
    "xlsx": "^0.18.5"
  }
}
